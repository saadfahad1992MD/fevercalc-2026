{
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "PH" }],
      "destination": "/ph",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "ID" }],
      "destination": "/id",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "TR" }],
      "destination": "/tr",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "MX" }],
      "destination": "/mx",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "BR" }],
      "destination": "/br",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "NG" }],
      "destination": "/ng",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "IN" }],
      "destination": "/in",
      "permanent": false
    },
    {
      "source": "/",
      "has": [{ "type": "header", "key": "x-vercel-ip-country", "value": "EG" }],
      "destination": "/eg",
      "permanent": false
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
